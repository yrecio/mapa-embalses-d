html, body {
    padding: 0;
    margin: 0;
    font-family: Open Sans;
    font-size: 14px;
	display: block;
	justify-content: center;
}

th, td {
    vertical-align: top;
    text-align: left;
	font-size: 1.5rem;
}

td strong{
	font-size: 1rem;
}

#map {
	margin-top: 1.5rem;
	height: 35rem;
	width: 100%;
    border: 2px solid white;
}

@media (max-width: 500px){
	#map {
		height: 25rem;
	}
	.titulo {
		font-size: 6rem;
	}
}

@media (min-width: 500px) and (max-width: 700px){
	#map {
		height: 25rem;
	}
	
	.panel h2 {
		font-size: 1.3rem;
		flex-wrap: wrap;
	}
}

@media (min-width: 700px) and (max-width: 900px){
	#map {
		height: 25rem;
	}
	
	.panel h2 {
		font-size: 1.3rem;
		flex-wrap: wrap;
	}
}

.thumbs{
	display: flex;
	justify-content: center;
	flex-wrap: wrap;
    padding-left: 0px;
	width: 100%;
}

.thumb{
	padding: 0 0.2rem 0 1.5rem;
  }
  
.div-thumb{
	display: flex;
	align-items: center;
	align-content: left;
}

.panel{
	text-align: center;
	width: 100%;
}

.ol-popup {
    display: none;
    position: absolute;
    background-color: white;
    -moz-box-shadow: 0 1px 4px rgba(0,0,0,0.2);
    -webkit-filter: drop-shadow(0 1px 4px rgba(0,0,0,0.2));
    filter: drop-shadow(4px 4px 0px rgba(0,0,0,0.2));
    padding: 10px;
    border: 2px solid #cccccc;
    bottom: 12px;
    left: -50px;   
    height: auto;
    width: 3rem;
    min-width: 170px;
    max-height:400px;
    overflow: none;  
}

.ol-attribution a {
    text-decoration: none;
    color: #666;
    font-family: sans-serif;
    font-size: 100%;
}

.layer-switcher .panel {
    //border: 4px solid rgba(0,60,136,.5) !important;
    //border-radius: 4px !important;
}

.layer-switcher {
    top: 0.5em;
    right: 0.5em;
    text-align: left;
}

#popup-content>ul>li:nth-child(even) {
    display: hidden;
}

#popup-content ul {
    list-style-type: none;
    padding-left: 0;
}

#popup-content li {
    margin-bottom:0.25em;
}



footer {
	display: flex;
	justify-content: space-around;
	align-items: center;
	margin-top: 1.5rem;
	color: gray;
	text-align: center;
}

#logoep {
	padding-left: 1rem;
	height: 1.1rem;
}